<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Widget.ex.BottomSheetEditorTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">#99192B3F</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!--Button-->
    <style name="Widget.ex.general.editor.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">?attr/textAppearanceButton</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/button_text_selector</item>
        <item name="iconTint">@color/button_text_selector</item>
        <item name="backgroundTint">@color/button_bg_selector</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">6dp</item>
        <item name="android:paddingStart">18dp</item>
        <item name="android:paddingEnd">18dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="fontWeight">500</item>
        <item name="android:fontWeight" tools:targetApi="o">500</item>
        <item name="fontStyle">normal</item>
        <item name="android:fontStyle" tools:targetApi="o">normal</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="rippleColor">#00000000</item>
    </style>
</resources>